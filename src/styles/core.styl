@import "modules/variables"
@import "modules/mixins"
@import "modules/assets"


/*------------------------------------*\
  Styling for default UI elements
\*------------------------------------*/

for $type in text password datetime datetime-local date month time week number email url search tel
  [type={$type}]
    height: $inputHeight
    border: #b6b8b7
    border-radius: 2px
    padding: 0 10px
    placeholder #b5b7b7
    &:invalid
      border-color $secondary-color !important
      color $secondary-color !important
    label &
      width: 100%

for $type in radio checkbox
  [type={$type}]{}

textarea
  vertical-align: top
  resize: none
  min-height 100px
  border: #b6b8b7
  border-radius: 2px
  padding: 5px 10px
  placeholder #b5b7b7
  label &
    width: 100%

button
  border: none
  background-color: transparent


label
  display block
  span
    display block
    margin-bottom: 2px



a
  color: $linkColor
  text-decoration: none
  &:hover
    color $hoveredLinkColor
    text-decoration: none
  &:focus
    color $focusedLinkColor
    outline: none
  &:active
    color $activeLinkColor
    outline none
  &:visited
    color $visitedLinkColor



body
  background-color: $bodyColor
  padding-top: 140px

figure
  reset-box-model()
/*------------------------------------*\
    Custom UI elements
\*------------------------------------*/
.ui-island
  border-top: 1px solid #d5d5d5
  border-bottom: 1px solid #d5d5d5
  padding: 20px 0

.button
  padding: 7px 15px
  background-color: #fff
  color: $baseFontColor
  border #666
  border-radius 2px
  cursor pointer
  transition .4s background-color

  &.secondary
    color: $secondary-color
    border-color: $secondary-color
    &:hover,&:focus,&.is-active
      background-color: $secondary-color
      color: #fff

  &.primary
    color: $primary-color
    border-color: $primary-color
    &:hover,&:focus,&.is-active
      background-color: $primary-color
      color: #fff



  &.icon-plus
    position: relative
    &:before
      pb(left 10px top 50%)
      img('button-secondary-plus.png')
      margin-top: -5px
      size 9px



.ui-button__dropdown
  background-color: #fff
  border-width: 1px
  border-style: solid
  padding: 10px
  position: absolute
  top: 100%
  z-index: 1
  //triangle
  &:before
    pb(bottom 100% right 10px)
    size 13px 7px
    img('button-dropdown-default.png')

  &.primary
    border-color: $primary-color
    &:before
      img('button-dropdown-primary.png')


  &.secondary
    border-color: $secondary-color
    &:before
      img('button-dropdown-secondary.png')


  button
    width: 107px !important



hr
  margin: 10px 0
  background-color: #d5d5d5


.ui-formWrapper
  hLine(top)
  margin-left: -10px
  margin-top: 10px
  label
    width: 235px
    margin-left: 9px
    margin-bottom: 10px
    span
      text-transform: capitalize

  .button
    display block
    margin-left: 9px



.ui-columnize-2
  column-count 2
  column-gap 15px


.ui-title
  font-size: 30px
  color: #333333

.ui-subTitle
  font-size: 22px
  color: #333;

.connectBtn--linkedin
  size 200px 32px
  img('connect-to-linkedin.png')
  hide-text()

.connectBtn--facebook
  size 210px 32px
  img('connect-to-facebook.png')
  hide-text()


.delete-tooltip
  &:hover span
    display block
  span
    display none
    absolute(bottom 100% left 50%)
    z-index: 500;
    margin-left: -22px;
    margin-bottom: 5px
    color #ddd
    font-size 11px
    font-weight bold
    background-color #333
    border-radius 2px
    padding: 1px 3px
    //corner
    &:before
      pb(top 100% left 50%)
      border-top   3px solid #333
      border-left  4px solid transparent
      border-right 4px solid transparent
      margin-left: -3px


.ui-wswg
  h1,h2,h3,h4,h5,h6,p,ul,ol
    margin-bottom: $paragraphSpace;

  ul
    list-style-type disc

  ol
    list-style-type decimal
/*------------------------------------*\
    HEADER
\*------------------------------------*/
.l-header
  background-color #fff
  width: 100%
  fixed left top
  z-index: 200

.l-header__row
  container()
  jLine middle
  padding: 20px 0 0
  &:last-child
    padding-bottom: 20px
    border-bottom 1px solid #d8d8d8

.logo
  text-decoration: none
  img
    display inline-block

.events
  text-align: right
  hLine middle
  position relative
  z-index: 10
  &>li
    position relative
    padding: 0 15px 7px
    &:before
      absolute left top 50%
      size 1px 10px
      background-color: #d5d5d5
      margin-top: -5px
    &:first-child:before
      display none
    &:hover
      .this__dropdown
        left auto
        right: 15px

  for $i in connections messages notifications
    .this__label--{$i}
      display block
      position relative
      img('events-'+$i+'.png')
      size 16px

  .this__label__counter
    absolute top -9px right -12px
    text-align: center
    font-weight bold
    c1(#fff)
    font-size: 12px
    size 20px
    line-height: 20px
    background-color $secondary-color
    border-radius: 50%

  .this__dropdown
    absolute top 100% left -9999px
    z-index: 101
    background-color: #fff
    border #bdbebd
    //arrow
    &:before
      pb(right 0 bottom 100%)
      img('dropdown-arrow.png')
      size 12px 7px

    ul
      max-height: 170px
      overflow-y: auto

    li
      .flexbox &
        display flex
        justify-content space-between
        align-items middle
      .no-flexbox &
        display block
        clearfix()
        &>*:last-child
          float right
        &>*:first-child
          float left
      padding: 10px
      border-bottom: 1px solid #bdbebd
      &:last-child
        border-bottom: none
      &:hover
        background-color: #dedede

    
    .person-view
      hLine middle
      text-align: left
      font-size: 12px
      cursor: pointer
      margin-right: 10px
      .button
        padding: 6px 12px

      .this__photo
        size 32px
        margin-right: 10px

      .this__message
        max-width: 200px
        ellipsis()

  .this__dropdown__footer
    padding: 10px
    background-color: #f7f7f7
    text-align: center
    color: #2d2d2d
    font-size: 12px
    cursor: pointer
    border-top: 1px solid #bdbebd
  

  .this__userMenu
    padding-right: 0
    border-right: none
    a
      c1(#333)
    &.is-active:after
       img('select-arrow-reversed.png')

    &:hover
      .this__dropdown
        left auto
        right: 0

    .this__dropdown
      li
        width: 150px
        &:last-child
          border-bottom: none
      
    
  
  .this__userMenu__label
    font-size: 14px
    &:after
      pi(baseline)
      img('select-arrow.png')
      size 15px 8px
      margin-left: 7px
    
  //fix scrollbar gutter
  .jspPane
    width inherit !important


.mainNav
  a
    display block
    padding: 0 15px
    line-height: 1.2
    c2(#656565, $primary-color)
    font-weight: bold
    border-left 1px solid #d5d5d5
  li:first-child a
    padding-left: 0
    border-left none

.search
  width: 250px
  position relative

  .this__field
    width:100%
    padding-left: 32px
    padding-right: 10px
    color: #333
  
  .this__submit
    hide-text()
    text-indent 300%
    pb(top 50% left 10px)
    z-index: 1
    img('search-icon.png')
    size 16px
    margin-top: -8px

.invites
  color: #bdbdbd;
  font-size: 14px;

.invites__counter
  color: $primary-color

/*------------------------------------*\
    CONTENT Zone
\*------------------------------------*/
select
  cursor: pointer
  &,&:hover
    background-color: transparent
    border: none
    padding: 0 20px 0 5px
    img('select-arrow.png','100% 50%')
  


.l-main
  container()
  clearfix()


/*------------------------------------*\
    FOOTER
\*------------------------------------*/
.l-footer
  position: relative
  container()
  padding-bottom: 60px

.l-footer__btm
  @extend .ui-island
  jLine middle

.pagination
  @extend .ui-island
  border-top none
  hLine middle
  text-align: center
  a
    display: block
    size 30px
    line-height: 30px
    border-radius: 2px
    border: #d5d5d5
    c2(#d5d5d5, $primary-color)

  .control-prev,
  .control-next
    display inline-block
    hide-text()
    border: none
    img('pagination-prev.png')
    &.is-disabled
      display none

  .control-next
    img('pagination-next.png')

  .is-active
    border-color: $primary-color
    c1($primary-color)


.boxes
  @extend .ui-island
  margin: -1px 0
  container()
  jLine top
  color: #999

  for $i in 1..3
    .this__unit--{$i}
      width: 320px
      background-color #f2f2f2
      img('boxes-'+$i+'.png','20px 20px')
      padding: 20px

  .this__unit__title
    font-weight: 400
    font-size: 22px
    color: #656565
    margin: 0 0 5px
    padding-left: 40px


.l-footer__bottom
  container()
  @extend .ui-island
  padding: 15px 0
  border-top: none

.serviceNav
  hLine()
  font-size: 12px
  a
    margin-right: 25px
    c1(#333)
    &:hover,&:focus
      text-decoration: underline
    
  

.socialNav
  hLine(middle)
  text-align: right
  for $i in facebook twitter pinterest linkedin google instagram youtube
    .this__unit--{$i}
      hide-text()
      display: block
      size 16px
      margin-left: 5px
      img('social-'+$i+'.png')

                        

.safe-and-sequre
  font-size: 12px
  line-height: 16px
  padding-left: 20px
  img('safe-and-sequre.png','0 50%')

/*------------------------------------*\
    Template: invitations
\*------------------------------------*/
.event-table
  width: 100%
  border-collapse: collapse
  td
    @extend .ui-island
  
  tr:hover
    td
      background-color: #dedede

  tr.is-active
    &, &:hover
      td
        background-color: #f5f5f5


  tr:last-child
    td
      border-bottom: none

  .this__mainCell
    hLine(middle)
    padding: 16px 20px
    width: 60%

  .this__userPic
    size 45px
    margin-right: 10px

  .this__time
    span
      display: inline-block
      padding: 0 10px
      border-left: 1px solid #333
      &:first-child
        border-left: none




/*------------------------------------*\
    Template: search
\*------------------------------------*/
.search-view
  container()
  jLine stretch
  .no-flexbox &
    hLine top

.search-settings
  background-color: #f7f7f7
  width: 235px
  .this__section
    color: #656565
    background-color: #f7f7f7
    padding: 12px 8px
    border-bottom: 1px solid #d5d5d5
    select
      width:45%
      margin-bottom: 5px
      background-color: #d5d5d5
      padding: 2px 5px
      font-size: 11px
      border-radius: 2px
    
  
  .this__selectWrap
    jLine middle
  
  .this__section__title
    color: #333
    font-size: 14px
    font-weight: bold
    text-transform: uppercase
    margin: 0 0 5px
  
  .this__section__list
    font-size: 11px
    max-height: 240px
    overflow-y: auto
    a
      display: block
      position: relative
      margin-bottom: 6px
      transition: all .3s
      c1(#656565)
      &:hover,&:focus
        padding-left: 10px
      
      &.is-active
        background-color: #d5d5d5
        border-radius: 2px
        padding: 3px 5px
        //close icon
        &:after
          pb(right 5px top 50%)
          margin-top: -5px
          size 9px
          img('search-settings-item-unselect.png')
        
      
    
    .jspDrag
      background-color: #7c7c7c
    
    .jspVerticalBar,
    .jspHorizontalBar
      width: 7px
    
  
  .this__section__list--selected
    font-size: 11px
    
    ul
      margin-left: 10px
      a
        //chain
        &:before
          pb(top 50% right 100%)
          img('list-chain.png')
          size 6px 21px
          margin-top: -16px
    a
      display: block
      position: relative
      c1(#656565)
      margin-bottom: 5px
      background-color: #d5d5d5
      border-radius: 2px
      padding: 3px 5px
      //close icon
      &:after
        pb(right 5px top 50%)
        margin-top: -5px
        size 9px
        img('search-settings-item-unselect.png')
      
    
  
  .this__section__expander
    text-align: right
    font-size: 11px
    font-weight: bold
    text-transform: uppercase
    cursor: pointer
    &:after
      pi()
      size 15px 8px
      img('select-arrow.png')
      margin-left: 5px
    
    &.is-active:after
      img('select-arrow-reversed.png')



.search-results
  width: 730px
  .this__header
    @extend .ui-island
    padding: 10px 0
    jLine(middle)

    .customSelect
      font-size: 14px
      .caret
        transform: scale(1)
        right:7px
      
      dd
        font-size: 14px
      
    
    .selectedValue
      padding: 10px 5px 10px 10px
    
  
  .this__title
    color: #333
    font-size: 20px
    font-weight: 400

  .ui-title
    color: #333
    font-size: 30px !important

  select
    width: 150px
    padding: 5px 10px
    border-radius: 2px
    background-color: #d5d5d5

  .this__list
    hLine()
    margin-left: 10px
    &>li
      margin-left: 10px

  .button
    width: 120px


.person-profile
  position: relative
  clearfix()
  width: 235px
  margin-top: 20px
  &:hover
    background-color: #f7f7f7
    .this__resize,
    .this__bookmark,
    .this__invite
      display: block
      visibility: visible
    
  
  .this__photo
    position: relative
    padding-bottom: 5px
    border-bottom: 1px solid #d5d5d5
    img
      width: 100%
      height: auto
      display: block
    
  
  .this__info
    clearfix
    padding: 5px 15px
    p
      margin: 0
      font-size: 12px
    b
      font-weight: bold
    strong
      font-size: 15px
      font-weight: normal
  

  .this__resize
    hide-text()
    display: none
    absolute(top right)
    size 60px
    img('search-result-resize.png')

  .this__bookmark
    display: none
    absolute bottom 5px left
    width: 100%
    padding: 5px
    background-color: rgba(255,255,255,.35)

  .this__invite
    margin: 5px -10px
    float: right
    visibility: hidden

  .button
    width: 129px
    padding-top:    7px
    padding-bottom: 7px
    position: relative
    &.is-active:before
      pb()
      img('arrow-button-active.png')
      width: 11px
      height: 6px
      top: 50%
      right: 10px
      margin-top: -3px





/*------------------------------------*\
    Template: user profile
\*------------------------------------*/
.user-profile
  .this__header
    @extend .ui-island
    padding: 0
    margin-bottom: 20px
    jLine stretch

  .this__header__left
    width: 690px
    padding: 10px 0
    .no-flexbox &
      border-right: 1px solid #d5d5d5

  .this__header__right
    width: 270px
    .flexbox &
      display flex
      justify-content flex-end
      align-items center
      border-left: 1px solid #d5d5d5
    .no-flexbox &
      hLine(middle)
      text-align: center

    .button:last-child
      margin-left: 12px

    .button
      width: 120px

  .this__title
    color: #333
    font-size: 24px
    line-height: 1.2
    margin-bottom: 5px
    font-weight: bold

  .this__header__info
    hLine()
    font-size: 18px
    &>*
      margin-right: 25px
      &:last-child
        margin-right: 0

  .this__email
    &:before
      pi(baseline)
      width: 16px
      height: 12px
      img('icon-mail.png')
      margin-right: 5px


  .this__tel
    &:before
      pi(baseline)
      margin-bottom: -1px
      width: 11px
      height: 16px
      img('icon-tel.png')
      margin-right: 5px

  .this__main
    .flexbox &
      display flex
      justify-content space-between
      align-content stretch

    .no-flexbox &
      clearfix()

  .this__main__photo
    size: 350px
    .no-flexbox &
      float left
    img
      display: block
      size 100%

  .this__main__info
    width: 565px
    .flexbox &
      display flex
      flex-direction column
      justify-content space-between
    .no-flexbox &
      float right
    p
      font-size: 13px

  .this__otherPhotosList
    margin-top: 15px
    border-top: 1px solid #d5d5d5
    ul
      margin-left: -21px
      hLine(top)

    li
      margin-left: 21px
      width: 125px


    img
      display: block
      width: 100%
      height: auto
      &:hover
        box-shadow: 0 0 0 2px #fff, 0 0 0 3px #babcbb

  .this__otherPhotosList__title
    color: #333
    font-size: 24px
    margin: 10px 0
    font-weight: 400
    a
      color: $secondary-color


  .this__info
    jLine(top)
    border-top: 1px solid #d5d5d5
    margin-top: 20px
    color: #656565
    dl
      font-size: 13px
    dt
      color: #999
      width: 125px
      float: left
      font-weight: 400
      margin-bottom: 10px

    dd
      border-bottom: 1px solid #d5d5d5
      margin-bottom: 10px
      &:last-of-type
        border-bottom none

  .this__info__lt
    width: 355px

  .this__info__rt
    width: 565px

  .this__info__section
    border-bottom 1px solid #d5d5d5
    &:last-child
      border-bottom none

  .this__info__section__title
    color: #333
    font-size: 22px
    line-height: 1.2
    margin: 20px 0 10px


  .this__interests
    hLine(bottom)
    dt
      width: 100px
      float none
      margin-bottom: 15px
    dd
      width: 424px
      position relative
      top -2px
      margin-bottom: 15px



.pay-plane
  margin-top: 20px
  width: 193px
  padding: 30px
  text-align: center
  transition all .4s
  .this__invites
    margin: 0 auto 20px
    size 135px
    border-radius 50%
    background-color #00bff3
    color: #fff
    font-size: 22px
    line-height: 1
    font-weight 700
    transition .4s background-color
    .flexbox &
      display flex
      justify-content center
      align-items center
      flex-direction column

    .no-flexbox &
      text-align: center;
      padding-top: 28px

  .no-flexbox &
    text-align: center

  .this__invites__counter
    font-size: 50px
    display block

  .this__title
    color: #333;
    font-size: 22px;
    font-weight: 700;
    margin-bottom: 0

  .this__price
    color: #333
    text-transform: uppercase
    font-weight 700

  .button
    margin-top: 20px

  &:hover,&.is-active
    background-color: #f5f5f5
    .this__invites
      background-color #6dcff6

/*------------------------------------*\
  Template: Payment
\*------------------------------------*/
.payment-view
  font-size: 13px
  padding-top: 10px

  .this__section__header
    position relative
    font-size: 22px
    color: #333
    padding: 3px 0
    border-bottom 1px solid #d5d5d5

  .button
    display block
    margin-top: 20px
    width: 235px

  .this__section
    margin-bottom: 50px

  .this__title
    font-size: 30px;
    margin-bottom: 0px

  .this__subTitle
    font-size: 22px
    padding-bottom: 5px
    border-bottom 1px solid #d5d5d5

  .this__tabs__nav
    width: 160px
    float left
    position relative
    a
      position relative
      display block
      padding: 10px
      background-color #f8f8f8
      border-bottom 1px solid #d5d5d5
      font-size: 14px
      color: #656565
      img('tab-nav-arrow.png','110px 50%')
      &:hover,&:focus,&.is-active
        color $primary-color
        background-image data('tab-nav-arrow-active.png')
      &.is-active
        background-color #fff
        z-index: 1

  .this__tabs
    width: 820px
    position relative
    left -1px
    float right
    border #d5d5d5
    border-top: none
    border-bottom: none
    padding: 20px 20px 20px 80px

  .this__payment{
    min-height: 115px
  }

  .this__payment__title
    margin: -7px 0 12px
    font-weight 700

  .this__payment__main
    min-height 250px


  .this__payment--card
    img('payment-card.png','100% 0')

    label
      width: 320px
      margin: 10px 0

  .this__payment__type--credit
    position relative
    //image
    &:before
      pb(left 100% bottom 5px)
      background-image data('payment-credit-supported.png')
      size 137px 25px
      margin-left: 5px

  .this__payment__type--debit
    position relative
    //image
    &:before
      pb(left 100% bottom 5px)
      background-image data('payment-debit-supported.png')
      size 138px 27px
      margin-left: 5px

  .this__payment--card__expiryDate
    width: 320px
    jLine top
    select,
    .customSelect
      width: 155px !important

    .customSelect dl
      width: 153px !important

  .this__payment--card__cvv
    width: auto !important
    input
      width: 70px

  .this__payment--card__cvv__description
    margin-left: 12px
    padding-left: 55px
    line-height 35px
    img('payment-card-cvv.png','0 50%')

  .this__payment--card__agreement
    width: auto !important
    hLine(middle)


  .this__payment--bank__list
    hLine()
    margin: 5px 0 5px -10px

  .this__payment--bank__item
    margin: 5px 0 5px 10px
    size 155px 60px
    border #b5b7b7
    border-radius: 2px;
    text-align: center
    vAlign(middle)
    input[type=radio]
      margin: 0 5px 0 0




.button-paypal-payment
  font: 0/0 serif;
  display block
  margin: 10px 0
  background-image data('payment-paypal-button.png')
  size 256px 47px
  cursor: pointer

/*------------------------------------*\
  Template: Edit profile
\*------------------------------------*/

.edit-profile-view
  padding-top: 10px
  .ui-title
    max-width: 530px

  .this__incorrectFormAlert
    color: $secondary-color;
    font-weight 700
    margin-top: 15px

  .this__section
    margin-bottom: 20px
    border-bottom 1px solid #d5d5d5

    &.is-active
      border-bottom none

      .this__section__header
        border-bottom 1px solid #d5d5d5
        color: #333
        &:before
          img('icon-minus.png')
          size 13px 1px
          margin-top: 0

      .this__section__main
        display block


  .this__section__header
    position relative
    cursor pointer
    font-size: 22px
    color: #666
    padding: 3px 0
